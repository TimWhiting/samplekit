{
	"name": "samplekit.dev",
	"description": "A collection of SvelteKit design pattern examples.",
	"private": true,
	"type": "module",
	"author": "Tim Cohen <contact@timcohen.dev>",
	"scripts": {
		"dev:db:create": "eval $(grep '^POSTGRES_PASSWORD' .env._development) && docker create --name sk-dev-db --env POSTGRES_PASSWORD=$POSTGRES_PASSWORD -p 5432:5432 postgres",
		"dev:db:start": "docker start sk-dev-db",
		"dev:db:apply_migrations": "env-cmd -f .env._development node ./scripts/applyDbMigrations.js",
		"dev:db:cli": "docker exec --user postgres --interactive --tty sk-dev-db psql",
		"dev:db:studio": "env-cmd -f .env._development drizzle-kit studio --config drizzle.studio.ts",
		"dev:db:stop": "docker stop sk-dev-db",
		"dev:db:delete": "docker stop sk-dev-db; docker rm sk-dev-db",
		"dev": "vite dev --mode _development",
		"generate:db_migrations": "drizzle-kit generate:pg --config drizzle.gen.ts",
		"generate:theme_utils": "./scripts/generate-theme-utils.sh",
		"generate": "for cmd in db_migrations theme_utils; do pnpm generate:$cmd; done",
		"build:dependencies": "for dir in auth; do pnpm --prefix ../../packages/$dir build; done",
		"build:site": "read -p 'Which .env mode? (ex: production uses .env.production): ' mode; if [ -z $mode ]; then echo Aborted && exit 1; elif [ ! -e .env.$mode ]; then echo Not found && exit 1; fi; vite build --mode $mode",
		"build": "pnpm build:dependencies && pnpm build:site",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --fail-on-warnings --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --fail-on-warnings --tsconfig ./tsconfig.json --watch",
		"ses:update_templates": "env-cmd -f .env._production node ./scripts/email/updateTemplates.js"
	},
	"dependencies": {
		"@aws-sdk/client-ses": "^3.474.0",
		"@samplekit/auth": "workspace:^",
		"body-scroll-lock-upgrade": "^1.1.0",
		"drizzle-orm": "^0.29.1",
		"drizzle-zod": "^0.5.1",
		"lucide-svelte": "^0.309.0",
		"pg": "^8.11.3",
		"pino": "^8.17.2",
		"pino-pretty": "^10.3.1",
		"twilio": "^4.20.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@melt-ui/pp": "^0.3.0",
		"@melt-ui/svelte": "^0.70.0",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/enhanced-img": "^0.1.6",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.10",
		"@types/pg": "^8.10.9",
		"@types/postcss-js": "^4.0.4",
		"autoprefixer": "^10.4.16",
		"drizzle-kit": "^0.20.6",
		"env-cmd": "^10.1.0",
		"postcss": "^8.4.32",
		"postcss-js": "^4.0.1",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"sveltekit-superforms": "^1.12.0",
		"tailwindcss": "^3.3.6",
		"vite": "^5.0.3"
	}
}
