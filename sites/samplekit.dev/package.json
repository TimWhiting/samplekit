{
	"name": "samplekit.dev",
	"description": "A collection of SvelteKit design pattern examples.",
	"private": true,
	"type": "module",
	"author": "Tim Cohen <contact@timcohen.dev>",
	"scripts": {
		"dev:db:create": "eval $(grep '^POSTGRES_PASSWORD' .env._development) && docker create --name sk-dev-db --env POSTGRES_PASSWORD=$POSTGRES_PASSWORD -p 5432:5432 postgres",
		"dev:db:start": "docker start sk-dev-db",
		"dev:db:apply_migrations": "env-cmd -f .env._development node ./scripts/applyDbMigrations.js",
		"dev:db:cli": "docker exec --user postgres --interactive --tty sk-dev-db psql",
		"dev:db:studio": "env-cmd -f .env._development drizzle-kit studio --config drizzle.studio.ts",
		"dev:db:stop": "docker stop sk-dev-db",
		"dev:db:delete": "docker stop sk-dev-db; docker rm sk-dev-db",
		"dev:kv:create": "eval $(grep '^REDIS_PASSWORD' .env._development) && docker create --name sk-dev-kv -p 6379:6379 redis redis-server --requirepass $REDIS_PASSWORD",
		"dev:kv:start": "docker start sk-dev-kv",
		"dev:kv:cli": "eval $(grep '^REDIS_PASSWORD' .env._development) && docker exec --interactive --tty sk-dev-kv redis-cli -a $REDIS_PASSWORD",
		"dev:kv:stop": "docker stop sk-dev-kv",
		"dev:kv:delete": "docker stop sk-dev-kv; docker rm sk-dev-kv",
		"dev": "vite dev --mode _development",
		"generate:db_migrations": "drizzle-kit generate:pg --config drizzle.gen.ts",
		"generate:theme_utils": "./scripts/generate-theme-utils.sh",
		"generate:graphql_codegen": "graphql-codegen",
		"generate": "for cmd in db_migrations theme_utils graphql_codegen; do pnpm generate:$cmd; done",
		"build:dependencies": "for dir in auth markdown; do pnpm --prefix ../../packages/$dir build; done",
		"build:site": "read -p 'Which .env mode? (ex: production uses .env.production): ' mode; if [ -z $mode ]; then echo Aborted && exit 1; elif [ ! -e .env.$mode ]; then echo Not found && exit 1; fi; vite build --mode $mode",
		"build": "pnpm build:dependencies && pnpm build:site",
		"preview:up": "docker compose -f ../../DockerCompose.samplekit.preview.yml up",
		"preview:web:sh": "docker exec -it sk-preview-web sh",
		"preview:db:cli": "docker exec --user postgres --interactive --tty sk-preview-db psql",
		"preview:down": "docker compose -f ../../DockerCompose.samplekit.preview.yml down",
		"preview:delete": "docker rm sk-preview-web sk-preview-db; docker volume rm sk_preview-db; docker network rm sk_default; docker rmi sk-web:latest;",
		"check:spell": "cspell lint --no-must-find-files **/*.svx",
		"check:svelte": "svelte-kit sync && svelte-check --fail-on-warnings --tsconfig ./tsconfig.json",
		"check:watch": "pnpm check-svelte --watch",
		"check": "pnpm check:spell && pnpm run check:svelte",
		"ses:update_templates": "env-cmd -f .env._production node ./scripts/email/updateTemplates.js"
	},
	"dependencies": {
		"@aws-sdk/client-cloudfront": "^3.507.0",
		"@aws-sdk/client-rekognition": "^3.507.0",
		"@aws-sdk/client-s3": "^3.507.0",
		"@aws-sdk/client-ses": "^3.507.0",
		"@aws-sdk/s3-presigned-post": "^3.507.0",
		"@samplekit/auth": "workspace:^",
		"@samplekit/markdown": "workspace:^",
		"@sentry/sveltekit": "^7.101.0",
		"@shopify/storefront-api-client": "^0.2.2",
		"body-scroll-lock-upgrade": "^1.1.0",
		"drizzle-orm": "^0.29.3",
		"drizzle-zod": "^0.5.1",
		"lucide-svelte": "^0.323.0",
		"pg": "^8.11.3",
		"pino-pretty": "^10.3.1",
		"platform": "^1.3.6",
		"svelte-crop-window": "^0.1.1",
		"twilio": "^4.21.0",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^5.0.2",
		"@melt-ui/pp": "^0.3.0",
		"@melt-ui/svelte": "^0.72.0",
		"@shopify/api-codegen-preset": "^0.0.1",
		"@svelte-put/preprocess-auto-slug": "^1.0.1",
		"@sveltejs/adapter-node": "^4.0.1",
		"@sveltejs/enhanced-img": "^0.1.8",
		"@sveltejs/kit": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.10",
		"@types/pg": "^8.11.0",
		"@types/platform": "^1.3.6",
		"@types/postcss-js": "^4.0.4",
		"autoprefixer": "^10.4.17",
		"cspell": "^8.3.2",
		"drizzle-kit": "^0.20.14",
		"env-cmd": "^10.1.0",
		"ioredis": "^5.3.2",
		"magic-string": "^0.30.8",
		"postcss": "^8.4.34",
		"postcss-js": "^4.0.1",
		"shiki": "1.1.7",
		"svelte": "^4.2.10",
		"svelte-check": "^3.6.3",
		"sveltekit-superforms": "^1.13.4",
		"tailwindcss": "^3.4.1",
		"turnstile-types": "^1.2.0",
		"vite": "^5.0.12"
	}
}
