{
	"name": "@samplekit/markdown",
	"version": "2.0.0",
	"description": "Markdown utils and svelte preprocessors.",
	"private": true,
	"type": "module",
	"author": "Tim Cohen <contact@timcohen.dev>",
	"scripts": {
		"format": "prettier --ignore-path ../../.prettierignore --check .",
		"format:fix": "prettier --ignore-path ../../.prettierignore --list-different --write .",
		"lint": "pnpm -w run lint:markdown",
		"lint:fix": "pnpm -w run lint:markdown:fix",
		"check": "tsc --noEmit",
		"validate": "pnpm install --frozen-lockfile && pnpm format && pnpm lint && pnpm check",
		"clean": "rm -rf dist",
		"build": "pnpm clean && tsc"
	},
	"dependencies": {
		"marked": "^12.0.0",
		"shiki": "1.1.7"
	},
	"devDependencies": {
		"@types/hast": "^3.0.4"
	},
	"exports": {
		".": "./dist/index.js",
		"./codeblock": "./dist/codeblock.js",
		"./table": "./dist/table.js",
		"./package.json": "./package.json"
	}
}
