{
	"name": "samplekit-monorepo",
	"description": "Monorepo for SampleKit",
	"private": true,
	"type": "module",
	"author": "Tim Cohen <contact@timcohen.dev>",
	"scripts": {
		"format": "prettier --check .",
		"format:fix": "prettier --list-different --write .",
		"lint:auth": "eslint --max-warnings 0 packages/auth/",
		"lint:auth:fix": "pnpm lint:auth --fix",
		"lint:markdown": "eslint --max-warnings 0 packages/markdown/",
		"lint:markdown:fix": "pnpm lint:markdown --fix",
		"lint:svelte-crop-window": "eslint --max-warnings 0 packages/svelte-crop-window/",
		"lint:svelte-crop-window:fix": "pnpm lint:svelte-crop-window --fix",
		"lint:samplekit": "eslint --max-warnings 0 sites/samplekit.dev/",
		"lint:samplekit:fix": "pnpm lint:samplekit --fix",
		"lint": "eslint --max-warnings 0 .",
		"lint:fix": "pnpm sync && pnpm lint --fix",
		"check": "pnpm --recursive --no-bail check",
		"clean": "pnpm --recursive --no-bail clean",
		"build:packages": "pnpm --filter './packages/**' build",
		"sync": "pnpm --recursive sync",
		"validate": "./scripts/.githooks/pre-commit --write",
		"githooks:init": "git config core.hookspath ./scripts/.githooks"
	},
	"devDependencies": {
		"@types/node": "^20.11.16",
		"caprover": "^2.3.0",
		"eslint": "^9.4.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-disable-autofix": "^5.0.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-svelte": "^2.39.0",
		"globals": "^15.3.0",
		"prettier": "^3.3.1",
		"prettier-plugin-svelte": "^3.2.4",
		"prettier-plugin-tailwindcss": "^0.6.2",
		"typescript": "^5.3.3",
		"typescript-eslint": "^8.0.0-alpha.20"
	},
	"packageManager": "pnpm@8.9.0",
	"engines": {
		"node": ">=18.13",
		"pnpm": "^8.0.0"
	}
}
